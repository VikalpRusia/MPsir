<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns:fx="http://javafx.com/fxml/1" fx:id="dialogPane" xmlns="http://javafx.com/javafx/15.0.1"
            fx:controller="controller.NewUserController">
    <content>
        <VBox spacing="5.0">
            <Label text="User Name :"/>
            <TextField fx:id="userName">
                <VBox.margin>
                    <Insets left="25.0"/>
                </VBox.margin>
            </TextField>
            <Label text="Password :"/>
            <StackPane>
                <VBox.margin>
                    <Insets left="25.0"/>
                </VBox.margin>
                <PasswordField fx:id="password"/>
                <TextField fx:id="visiblePassword"/>
            </StackPane>
            <HBox spacing="10" alignment="CENTER">
                <Label text="Show password characters?"/>
                <CheckBox fx:id="isPasswordVisible"/>
                <padding>
                    <Insets top="10"/>
                </padding>
            </HBox>
            <padding>
                <Insets left="20.0" right="20.0" bottom="10" top="5"/>
            </padding>
        </VBox>
    </content>
</DialogPane>
